{
    "name": "ryan/cinetech",
    "autoload": {
        "psr-4": {
            "Ryan\\Cinetech\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "phpmailer/phpmailer": "^6.9",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "codeception/codeception": "^5.0"
    },
    "scripts": {
        "test": "phpunit",
        "test-unit": "phpunit tests/Unit",
        "test-integration": "phpunit tests/Integration",
        "test-functional": "codecept run functional",
        "test-all": "phpunit && codecept run"
    }
}